<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single list item in the list of pets -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/double_margin"
    android:paddingRight="@dimen/double_margin"
    android:paddingTop="@dimen/regular_margin"
    android:paddingBottom="@dimen/regular_margin">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="0dp"
        android:layout_weight=".46"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#2B3D4D"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/regular_margin"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".34"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAppearance="?android:textAppearanceListItem"/>

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAppearance="?android:textAppearanceListItem"/>
    </LinearLayout>

    <Button
        android:id="@+id/reduce_quantity_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/sell_button_label"
        android:textAllCaps="true"
        android:layout_gravity="right"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</LinearLayout>