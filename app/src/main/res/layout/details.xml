<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/name_edit_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/double_margin"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginTop="@dimen/regular_margin"
        android:text="Here Name of the Book written by famous author"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@+id/price_text_view"
        app:layout_constraintStart_toStartOf="@+id/name_edit_text_view"
        app:layout_constraintTop_toTopOf="@+id/price_text_view" />

    <EditText
        android:id="@+id/price_text_view"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/regular_margin"
        android:layout_marginTop="@dimen/double_margin"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="25.25"
        app:layout_constraintStart_toEndOf="@+id/price_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_text_view" />

    <Button
        android:id="@+id/reduce_price_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reduce_price"
        app:layout_constraintEnd_toStartOf="@+id/add_price_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/price_text_view"
        app:layout_constraintTop_toTopOf="@+id/price_text_view" />

    <Button
        android:id="@+id/add_price_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_price"
        app:layout_constraintEnd_toEndOf="@+id/name_edit_text_view"
        app:layout_constraintStart_toEndOf="@+id/reduce_price_button"
        app:layout_constraintTop_toTopOf="@+id/reduce_price_button" />

    <TextView
        android:id="@+id/quantity_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@+id/quantity_edit_text_view"
        app:layout_constraintStart_toStartOf="@+id/price_label_text_view"
        app:layout_constraintTop_toTopOf="@+id/quantity_edit_text_view" />

    <EditText
        android:id="@+id/quantity_edit_text_view"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/regular_margin"
        android:layout_marginTop="@dimen/double_margin"
        android:ems="10"
        android:inputType="number"
        android:text="15"
        app:layout_constraintStart_toEndOf="@+id/quantity_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/price_text_view" />

    <Button
        android:id="@+id/reduce_quantity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reduce_item"
        app:layout_constraintEnd_toEndOf="@+id/reduce_price_button"
        app:layout_constraintStart_toStartOf="@+id/reduce_price_button"
        app:layout_constraintTop_toTopOf="@+id/quantity_edit_text_view" />

    <Button
        android:id="@+id/add_quantity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_item"
        app:layout_constraintEnd_toEndOf="@+id/add_price_button"
        app:layout_constraintStart_toStartOf="@+id/add_price_button"
        app:layout_constraintTop_toTopOf="@+id/reduce_quantity_button" />

    <TextView
        android:id="@+id/supplier_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suppler"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@+id/supplier_edit_text_view"
        app:layout_constraintStart_toStartOf="@+id/quantity_label_text_view"
        app:layout_constraintTop_toTopOf="@+id/supplier_edit_text_view" />

    <EditText
        android:id="@+id/supplier_edit_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/regular_margin"
        android:layout_marginStart="@dimen/double_margin"
        android:ems="10"
        android:text="Name of Supplier. LTD very large name very very large"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="@+id/name_edit_text_view"
        app:layout_constraintStart_toEndOf="@+id/supplier_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/quantity_edit_text_view" />

    <TextView
        android:id="@+id/supplier_phone_number_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suppler_phone"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@+id/supplier_phone_number_edit_text_view"
        app:layout_constraintStart_toStartOf="@+id/supplier_label_text_view"
        app:layout_constraintTop_toTopOf="@+id/supplier_phone_number_edit_text_view" />

    <EditText
        android:id="@+id/supplier_phone_number_edit_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/regular_margin"
        android:layout_marginTop="@dimen/double_margin"
        android:ems="10"
        android:inputType="phone"
        android:text="+79242092625"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toEndOf="@+id/supplier_phone_number_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/supplier_edit_text_view" />
</android.support.constraint.ConstraintLayout>